<style>
#info {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1000;
  background-color: white;
  padding: 25px 25px 25px 25px;
}
html, body, #map, #map-container {
    padding: 0;
    margin: 0;
    height: 100%;
    width: 100vw;
}
</style>
<div id="map-container">
  <div id="info">
    <%= render :partial => 'partials/header' %>
    <h2>Instructions</h2>
    <% if current_user.nil? %>
      <p>Please <%= link_to 'sign in', new_user_session_path %> to add a report to the map.</p>
    <% else %>
      <p>Press anywhere on the map to add a report. Alternatively, <%= link_to 'add a report using your device location', new_report_path %>.</p>
    <% end %>
  </div>

  <div id="map"></div>
</div>

<script type="text/javascript">
  var map = L.map("map", { zoomControl: false }).setView([<%= @latitude %>, <%= @longitude %>], 13);
</script>
<%= javascript_pack_tag 'home_page_map' %>
