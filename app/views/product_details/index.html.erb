<h1>Product Details</h1>

<table>
  <thead>
    <tr>
      <th>Scarcity</th>
      <th>Price</th>
      <th>Notes</th>
      <th>Product</th>
      <th>Report</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_details.each do |product_detail| %>
      <tr>
        <td><%= product_detail.scarcity %></td>
        <td><%= product_detail.price %></td>
        <td><%= product_detail.notes %></td>
        <td><%= product_detail.product_id %></td>
        <td><%= product_detail.report_id %></td>
        <td><%= link_to 'Show', product_detail %></td>
        <td><%= link_to 'Edit', edit_product_detail_path(product_detail) %></td>
        <td><%= link_to 'Destroy', product_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

