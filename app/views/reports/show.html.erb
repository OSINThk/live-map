<p>
  <strong>Location:</strong>
  <%= @report.coordinates %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @report.notes %>
</p>

<% if current_user.id != @report.user_id %>
<p>
  <strong>User:</strong>
  <%= @report.user_id %>
</p>
<% end %>

<p>
  <strong>Product Details:</strong>
</p>

<ul>
  <% @report.product_detail.each do |product_detail| %>
    <li>
      <dl>
        <dt>Product</dt>
          <dd><%= product_detail.product.name %></dd>
        <dt>Product Scarcity</dt>
          <dd><%= product_detail.scarcity %></dd>
        <dt>Product Price</dt>
          <dd><%= product_detail.price %></dd>
        <dt>Product Notes</dt>
          <dd><%= product_detail.notes %></dd>
      </dl>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
